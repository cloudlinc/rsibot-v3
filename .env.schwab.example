# Schwab Trading Bot Configuration

# Schwab Credentials
SCHWAB_USERNAME=your_username
SCHWAB_PASSWORD=your_password

# Schwab API Settings
SCHWAB_API_ENDPOINT=https://api.schwab.com/v1
SCHWAB_API_KEY=your_api_key
SCHWAB_API_SECRET=your_api_secret

# Trading Parameters
RSI_PERIOD=14
RSI_BUY_THRESHOLD=30
RSI_SELL_THRESHOLD=70
SHARES_PER_TRADE=10

# Browser Automation Settings (if needed)
CHROME_DRIVER_PATH=/usr/local/bin/chromedriver
HEADLESS_MODE=true

# Monitoring Settings
LOG_LEVEL=INFO
ENABLE_TRADE_LOGGING=true 